{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@products-monorepo/shared": ["./packages/shared/src"],
      "@products-monorepo/shared/*": ["./packages/shared/src/*"]
    }
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./apps/whatsapp-service" },
    { "path": "./apps/products-agent" },
    { "path": "./apps/supa-agent-frontend" },
    { "path": "./apps/workflows" }
  ]
}
